source! /home/marslo/.vimperatorrc.local

" vim: set ft=vimperator:

" Let Ctrl+n/p to goto/backto webpage
noremap <C-n> H
noremap <C-p> L

" H/L to move right/left
noremap H h
noremap L l

" h/l to change the right/left tab
noremap h gT
noremap l gt

noremap j 3j
noremap k 3k

" Set <C-d> as add bookmark 
noremap <C-d> :dialog addbookmark<CR>

" Only open Search engine and Bookmarks
set complete=sb

" Highlight search
set hlsearch

" Execute the config file immediately
map S :so ~/.vimperatorrc<CR>

" limit the highth of line
set maxitems=1

" Quick Open
noremap gr :tabopen https://translate.google.com/?hl=en&tab=wT

" hint theme
highlight StatusLine color:#888888; background:transparent; font-weight:bold;
highlight CmdLine color:#999999; background:#2b2b2b; font-weight:lighter;
highlight ModeMsg  color:darkred;background:transparent; font-weight:bold;
highlight ErrorMsg font-weight:normal; color:red; background:#2b2b2b;
highlight CompItem[selected] font-weight:normal; color:#444444; background:#AAAAAA;
hi Hint font-family:Candara; font-size:12px; font-weight:lighter; uppercase; color:black; padding:1px; margin-left:-16px; margin-top:-10px; text-transform:
hi HintElem clear
